# Town Builder Environment Configuration
# Copy this file to .env and fill in the values

# ===========================
# JWT Authentication
# ===========================
# REQUIRED in production! Generate a secure random string:
# openssl rand -hex 32
JWT_SECRET_KEY=your_secure_random_string_here_change_in_production
JWT_ALGORITHM=HS256

# Set to 'false' in production (requires JWT_SECRET_KEY to be set)
# Only set to 'true' when using an authentication proxy (Cloudflare Tunnel, etc.)
DISABLE_JWT_AUTH=true

# ===========================
# External Django API (Optional)
# ===========================
# URL for external Django API integration
TOWN_API_URL=http://localhost:8000/api/towns/

# JWT token for authenticating with external Django API
TOWN_API_JWT_TOKEN=your_django_api_jwt_token_here

# ===========================
# Redis Configuration
# ===========================
# Redis connection URL for multiplayer state sharing
# Default: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# ===========================
# Environment
# ===========================
# Set to 'production' for production deployments
ENVIRONMENT=development

# ===========================
# CORS Security (REQUIRED in production)
# ===========================
# Comma-separated list of allowed origins
# Development defaults:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001,http://127.0.0.1:5001,http://localhost:5000,http://127.0.0.1:5000

# In production, set to your actual domains:
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ===========================
# Port Configuration
# ===========================
# Development mode uses port 5001
# Production mode uses port 5000 (matches Kubernetes deployment)
# Set via command line: uvicorn app.main:app --port 5001

# ===========================
# Security Notes
# ===========================
# - Never commit this file with actual secrets to version control
# - Always use strong, randomly generated secrets in production
# - Configure ALLOWED_ORIGINS to your actual domain(s) in production
# - Review docs/SECURITY_FIXES.md for security best practices
# - When using DISABLE_JWT_AUTH=true, ensure you have an authentication proxy
